<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sberify"
    android:versionCode="103"
    android:versionName="1.0.0-debug" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="30" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <queries>

        <!-- To track preinstallations using Satellite app -->
        <provider android:authorities="com.yandex.preinstallsatellite.appmetrica.provider" />
        <!-- To retrieve HMS referrer on non Huawei devices -->
        <package android:name="com.huawei.appmarket" />
        <!-- To retrieve advertising identifier on some devices without Google Play Services ot Huawei Media Services such as TV, Yandex Auto, etc. -->
        <intent>
            <action android:name="com.yandex.android.advid.IDENTIFIER_SERVICE" />
        </intent>
        <!-- To retrieve Huawei OAID on non Huawei devices -->
        <intent>
            <action android:name="com.uodis.opendevice.OPENIDS_SERVICE" />
        </intent>
    </queries>

    <uses-permission android:name="com.google.android.finsky.permission.BIND_GET_INSTALL_REFERRER_SERVICE" />

    <application
        android:name="com.example.sberify.SberifyApp"
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.sberify.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/com_spotify_sdk_redirect_host"
                    android:scheme="@string/com_spotify_sdk_redirect_scheme" />
            </intent-filter>
        </activity>

        <service
            android:name="androidx.room.MultiInstanceInvalidationService"
            android:directBootAware="true"
            android:exported="false" /> <!-- Yandex Mobile Metrica Analytics: common service -->
        <service
            android:name="com.yandex.metrica.MetricaService"
            android:enabled="true"
            android:exported="true"
            android:process=":Metrica" >
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="com.yandex.metrica.IMetricaService" />

                <data android:scheme="metrica" />
            </intent-filter>

            <meta-data
                android:name="metrica:api:level"
                android:value="94" />
        </service>
        <service
            android:name="com.yandex.metrica.ConfigurationService"
            android:enabled="true"
            android:exported="false"
            android:process=":Metrica" >
            <meta-data
                android:name="metrica:configuration:api:level"
                android:value="3" />

            <intent-filter>

                <!-- This action was used by old background location collecting and should not be used again -->
                <!-- <action android:name="com.yandex.metrica.configuration.ACTION_START"/> -->
                <action android:name="com.yandex.metrica.configuration.ACTION_INIT" />
            </intent-filter>
        </service>
        <service
            android:name="com.yandex.metrica.ConfigurationJobService"
            android:enabled="true"
            android:exported="false"
            android:permission="android.permission.BIND_JOB_SERVICE"
            android:process=":Metrica" >
        </service> <!-- Yandex Mobile Metrica Analytics: main receiver -->
        <receiver
            android:name="com.yandex.metrica.MetricaEventHandler"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.yandex.metrica.ConfigurationServiceReceiver"
            android:enabled="true"
            android:exported="true"
            android:process=":Metrica" >
            <intent-filter>
                <action android:name="com.yandex.metrica.configuration.service.PLC" />
            </intent-filter>
        </receiver>

        <provider
            android:name="com.yandex.metrica.PreloadInfoContentProvider"
            android:authorities="com.example.sberify.appmetrica.preloadinfo.retail"
            android:enabled="true"
            android:exported="true"
            android:process=":Metrica" >
        </provider>

        <activity
            android:name="com.spotify.sdk.android.auth.LoginActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>
    </application>

</manifest>