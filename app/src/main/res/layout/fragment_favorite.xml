<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="favoriteVM"
            type="com.example.sberify.presentation.ui.favorite.FavoriteViewModel" />

        <variable
            name="tracksAdapter"
            type="com.example.sberify.presentation.ui.favorite.FavoriteAdapter" />

        <variable
            name="albumsAdapter"
            type="com.example.sberify.presentation.ui.newreleases.AlbumsAdapter" />


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/bottom_bar_height">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/favorite_tracks_recycler"
            style="@style/DefaultRecycler"
            adapter="@{tracksAdapter}"
            bindFavAlbums="@{favoriteVM.favoriteAlbums}"
            bindFavTracks="@{favoriteVM.favoriteTracks}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toTopOf="parent"
            tools:itemCount="5"
            tools:listitem="@layout/item_track_listed" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
