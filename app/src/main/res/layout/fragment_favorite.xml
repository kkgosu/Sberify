<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    tools:viewBindingIgnore="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="favoriteVM"
            type="com.example.sberify.presentation.ui.favorite.FavoriteViewModel" />

        <variable
            name="tracksAdapter"
            type="com.example.sberify.adapters.TrackListedAdapter" />

        <variable
            name="albumsAdapter"
            type="com.example.sberify.adapters.AlbumsAdapter" />

    </data>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/bottom_bar_height">

            <TextView
                android:id="@+id/favorite_tracks_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_medium"
                android:text="@string/favorite_tracks"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/favorite_tracks_recycler"
                adapter="@{tracksAdapter}"
                bindFavTracks="@{favoriteVM.favoriteTracks}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/favorite_tracks_label"
                tools:itemCount="5"
                tools:listitem="@layout/item_track_listed" />

            <TextView
                android:id="@+id/favorite_albums_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_medium"
                android:text="@string/favorite_albums"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:layout_constraintTop_toBottomOf="@id/favorite_tracks_recycler" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/favorite_albums_recycler"
                style="@style/DefaultRecycler"
                adapter="@{albumsAdapter}"
                bindFavAlbums="@{favoriteVM.favoriteAlbums}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/favorite_albums_label"
                app:spanCount="2"
                tools:listitem="@layout/item_album" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</layout>
