<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="track"
            type="com.example.sberify.models.domain.Track" />

        <variable
            name="pos"
            type="Integer" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selectable_item_bg"
        android:orientation="horizontal"
        android:padding="@dimen/padding_default">

        <!--        <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_music_note_black_24dp" />-->

        <TextView
            android:id="@+id/position"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_small"
            android:gravity="center"
            android:text="@{String.valueOf(pos)}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            android:textColor="@color/gray_50"
            tools:text="01" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding_default">

            <TextView
                android:id="@+id/track_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@{track.name}"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:transitionName="@{track.name}"
                tools:text="thousand eyes" />

            <TextView
                android:id="@+id/artist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@{track.artists}"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                tools:text="FKA twigs, Future" />
        </LinearLayout>
    </LinearLayout>
</layout>