<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="album"
            type="com.example.sberify.domain.model.Album" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        app:cardBackgroundColor="@android:color/black"
        app:cardCornerRadius="@dimen/corner_radius_default"
        app:elevation="@dimen/elevation_default">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/padding_default">

            <com.example.sberify.presentation.ui.utils.SquareImageView
                android:id="@+id/release_cover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:scaleType="centerCrop"
                android:transitionName="@{album.imageUrl}"
                app:image="@{album.imageUrl}"
                tools:src="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/release_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{album.name}"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:textColor="@color/white"
                android:transitionName="@{album.name}"
                tools:text="Courage (Deluxe Edition)" />

            <TextView
                android:id="@+id/artist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{album.artist.name}"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textColor="@color/white"
                android:transitionName="@{album.artist.name}"
                tools:text="Celine Dion" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
