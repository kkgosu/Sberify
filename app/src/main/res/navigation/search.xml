<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.sberify.presentation.ui.search.SearchFragment"
        android:label="SearchFragment">
        <action
            android:id="@+id/action_searchFragment_to_albumInfoFragment"
            app:destination="@id/albumInfoFragment" />
        <action
            android:id="@+id/action_searchFragment_to_lyricsFragment"
            app:destination="@id/lyricsFragment" />
    </fragment>
    <fragment
        android:id="@+id/albumInfoFragment"
        android:name="com.example.sberify.presentation.ui.albuminfo.AlbumDetailsFragment"
        android:label="AlbumInfoFragment">
        <action
            android:id="@+id/navigate_to_lyricsFragment"
            app:destination="@id/lyricsFragment" />
        <argument
            android:name="item"
            app:argType="com.kvlg.spotify_common.presentation.AlbumModel" />
    </fragment>
    <fragment
        android:id="@+id/lyricsFragment"
        android:name="com.kvlg.lyrics.LyricsFragment"
        android:label="LyricsFragment">
        <argument
            android:name="item"
            app:argType="com.kvlg.spotify_common.presentation.TrackModel" />
    </fragment>
</navigation>