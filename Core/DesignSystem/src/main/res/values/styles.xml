<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomSheet" parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:background">@drawable/top_corners_rounded_background</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="DefaultRecycler">
        <item name="android:clipToPadding">false</item>
        <item name="android:orientation">vertical</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:paddingBottom">@dimen/bottom_bar_height</item>
    </style>

    <style name="SearchView">
        <item name="android:background">@color/transparent</item>
        <item name="android:drawableStart">@drawable/ic_search_24</item>
        <item name="android:drawablePadding">@dimen/padding_medium</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>

    <!--TextAppearance-->

    <style name="ExpandedTitleTextAppearance" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textColor">@color/transparent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="CollapsedTitleTextAppearance" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_small_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LyricsTextAppearance" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/white_100</item>
        <item name="android:textSize">@dimen/text_size_small_large</item>
    </style>

    <style name="SwitchTextAppearance">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="android:textColor">@color/white_100</item>
        <item name="android:textSize">@dimen/text_size_small_large</item>
    </style>

    <style name="SearchTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray_400</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="SectionHeaderTextAppearance" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/white_100</item>
    </style>

</resources>
